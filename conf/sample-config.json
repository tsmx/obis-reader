{
    "database": {
        "protocol": "mongodb+srv",
        "server": "YOUR_MONGO_URL",
        "database": "YOUR_DB",
        "collectionValues": "YOUR_VALUES_COLLECTION",
        "collectionActuals": "YOUR_ACTUALS_COLLECTION",
        "options": "?retryWrites=true&w=majority",
        "user": "YOUR_USER",
        "password": "YOUR_PW"
    },
    "obis": {
        "protocol": "SmlProtocol",
        "transport": "SerialResponseTransport",
        "transportSerialPort": "/dev/ttyUSB0",
        "transportSerialBaudrate": 9600,
        "requestInterval": 10,
        "obisNameLanguage": "en",
        "obisFallbackMedium": 6
    },
    "intervals": {
        "persistValuesInterval": 300
    }
}